{
  "compilerOptions": {
    "module": "es6",
    "esModuleInterop": true,
    "target": "es6",
    "declaration": true,
    "noImplicitAny": false,
    "outDir": "dist",
    "baseUrl": ".",
    "strict": true,
    "lib": ["ESNext", "dom"],
    "types": ["@types/jest", "node", "miniprogram-api-typings", "./typings"],
    "paths": {
      "definitions/*": ["./packages/definitions/*"]
    },
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": ["packages/**/*", "typings/**/*"],
  "exclude": ["packages/**/test/*", "packages/**/demo/*"]
}
